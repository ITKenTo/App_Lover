<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorback"
    tools:context=".Activity.DetailPlansActivity">

    <LinearLayout
        android:id="@+id/lin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="1dp"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_arrow_back_ios_new_24"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Chi Tiết"
            android:gravity="center|center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/img_menu"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/baseline_more_vert_24"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_view_plans"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/anhgaixinhcucdep"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/name_plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colortext"
                android:layout_gravity="center"
                android:text="Ngọc Linh"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rip_btt"
                />

            <TextView
                android:id="@+id/tv_title_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input"
                android:text="Đi chơi công viên"
                android:padding="10dp"
                android:textColor="@color/colortext"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_date_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input"
                android:text="20/11/2023"
                android:padding="10dp"
                android:textColor="@color/colortext"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/tv_note_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input"
                android:text="Mặc áo đôi"
                android:padding="10dp"
                android:textColor="@color/colortext"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv_location_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input"
                android:text="Nam Từ Liêm, Hà Nội "
                android:padding="10dp"
                android:textColor="@color/colortext"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ggmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_button"
                android:text="Mở Google MAP"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>